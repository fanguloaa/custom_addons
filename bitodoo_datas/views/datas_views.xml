                                    <group>
                                        <field name="value_1" placeholder="Valor 1"/>
                                        <field name="value_2" placeholder="Valor 2"/>
                                        <field name="value_3" placeholder="Valor 3"/>
                                    </group>
                                    <notebook>
                                        <page string="Items">
                                            <field name="child_ids">
                                                <tree>
                                                    <field name="sequence" widget="handle"/>
                                                    <field name="name"/>
                                                    <field name="code"/>
                                                    <field name="value_1" placeholder="Valor 1"/>
                                                    <field name="value_2" placeholder="Valor 2"/>
